{
  "name": "arc-dex",
  "version": "1.0.0",
  "description": "Arc Dex - Token Launchpad & Trading Platform on Arc Blockchain",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "cd frontend && npm run dev",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd backend && npm run build && cd ../frontend && npm run build",
    "start": "cd backend && npm run prod",
    "test": "cd contracts && forge test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "arc",
    "dex",
    "token",
    "trading",
    "amm",
    "marketplace",
    "launchpad",
    "usdc"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@circle-fin/bridge-kit": "^1.1.0",
    "solc": "^0.8.30"
  }
}
